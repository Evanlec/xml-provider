<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.eclipse.org/gemini/blueprint/schema/blueprint
                           http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <osgi:reference id="ExternalProviderInitializerService" interface="org.jahia.modules.external.ExternalProviderInitializerService"/>

    <!-- Xml Writable -->

    <bean class="org.jahia.modules.external.ExternalContentStoreProvider" parent="AbstractJCRStoreProvider" scope="prototype">
        <property name="key" value="XmlWritableProvider"/>
        <property name="mountPoint" value="/mounts/xml-activities"/>
        <property name="externalProviderInitializerService" ref="ExternalProviderInitializerService"/>
        <property name="extendableTypes">
            <list>
                <value>jnt:contentFolder</value>
                <value>jnt:xmlActivity</value>
            </list>
        </property>
    </bean>

    <bean name="xmlProviderFactory" class="org.jahia.modules.xmlprovider.XmlProviderFactory"/>

    <bean class="org.jahia.modules.xmlprovider.XmlDataSourceWritable" scope="prototype">
        <property name="cacheProvider" ref="ehCacheProvider"/>
    </bean>

    <bean id="xmlMountPointFactory" class="org.jahia.modules.xmlprovider.factory.XmlMountPointFactory"/>

</beans>
